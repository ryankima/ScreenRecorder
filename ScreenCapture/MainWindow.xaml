<Window x:Class="ScreenCapture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScreenCapture"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="LayoutRoot">
        <Button x:Name="EndRecording" Height="20pt" Width="100pt" VerticalAlignment="Bottom" Panel.ZIndex="1">End Recording</Button>
        <Button x:Name="StartRecording" Height="20pt" Width="100pt" VerticalAlignment="Top" Panel.ZIndex="1">Start Recording</Button>
    </Grid>
</Window>